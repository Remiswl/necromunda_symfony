{% extends 'base.html.twig' %}

{% block title %}Gangs{% endblock %}

{% block body %}

	<section id="gangs">

		<div class="text-center mx-5">
			<div class="col-10 mx-auto">

				{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
				{% endfor %}

				<table class="table table-bordered bg-white">
					<thead class="bg-secondary text-white">
						<tr>
							<td colspan=2 class="align-middle">House: {{ gangData.0.house | upper }}</td>
							<td colspan=2 class="align-middle">Gang name: {{ gangData.0.gangName | upper }}</td>
							<td colspan=3>
								Gang stash: {{ gangData.0.credits }} credits<br>
								Gang rating: {{ gangData.0.gangRating }}
							</td>
						</tr>
						<tr>
							<td>Image</td>
							<td>Name</td>
							<td>Characteristics</td>
							<td>Equipment, skills & injuries</td>
							<td>Cost</td>
							<td>Exp.</td>
							<td>Edit</td>
						</tr>
					</thead>

					<tbody>
						{% for gangerData in gangersData %}
							<tr>
								<td><img src="/{{ gangerData.image }}" alt="{{ gangerData.name }}"></td>
								<td class="align-middle">{{ gangerData.name | upper }}<br>{{ gangerData.gangerType.name }}</td>
								<td class="d-flex flex-row">
									<table class="mx-auto">
										<tr>
											<td>M</td>
											<td>WS</td>
											<td>BS</td>
											<td>S</td>
											<td>T</td>
											<td>W</td>
											<td>I</td>
											<td>A</td>
											<td>Ld</td>
										</tr>
										<tr>
											<td>{{ gangerData.move }}</td>
											<td>{{ gangerData.weaponSkill }}</td>
											<td>{{ gangerData.ballisticSkill }}</td>
											<td>{{ gangerData.strength }}</td>
											<td>{{ gangerData.toughness }}</td>
											<td>{{ gangerData.wounds }}</td>
											<td>{{ gangerData.initiative }}</td>
											<td>{{ gangerData.attacks }}</td>
											<td>{{ gangerData.leadership }}</td>
										</tr>
									</table>
									<i class="fas fa-info-circle" title=" M => Move &#013 WS => Weapon skill &#013 BS => Ballistic skill &#013 S => Strength &#013 T => Toughness &#013 W => Wounds &#013 I => Initiative &#013 A => Attacks &#013 Ld => Leadership"></i>
								</td>
								<td class="text-left">Shotgun <i class="fas fa-info-circle"></i></td>
								<td class="align-middle">{{ gangerData.cost }}</td>
								<td class="align-middle">{{ gangerData.xp }}</td>
								<td class="align-middle">
									<a href="{{ path('edit_ganger', {ganger_id : gangerData.id}) }}" class="btn btn-secondary mb-3">Edit</a>
									<form method="post" action='{{ path('delete_ganger', {ganger_id : gangerData.id}) }}' onsubmit="return confirm('Do you really want to fire your ganger?')">
										<input type="hidden" name="_method" value="DELETE">
										<button class="btn btn-danger">Delete</button>
									</form>
								</td>
							</tr>
						{% endfor %}

						<tr>
							<td colspan=4 class="text-right">TOTALS:</td>
							<td>{{ totalCost }}</td>
							<td>{{ totalExp }}</td>
						</tr>
					</tbody>
				</table>
			</div>

			<div class="row d-flex justify-content-around mx-5">

				<table class="table table-bordered bg-white col-4">
					<thead class="bg-secondary text-white">
						<tr>
							<td>Territory</td>
							<td>Credits</td>
							<td>Territory</td>
							<td>Credits</td>
						</tr>
					</thead>

					<tbody>
						<tr>
							<td class="text-left">1. Slag <i class="fas fa-info-circle"></i></td>
							<td>15</td>
							<td class="text-left">6.  <i class="fas fa-info-circle"></i></td>
							<td></td>
						</tr>
						<tr>
							<td class="text-left">2. Drinking hole <i class="fas fa-info-circle"></i></td>
							<td>D6x10</td>
							<td class="text-left">7.  <i class="fas fa-info-circle"></i></td>
							<td></td>
						</tr>
						<tr>
							<td class="text-left">3. Mineral <i class="fas fa-info-circle"></i></td>
							<td>D6x10</td>
							<td class="text-left">8.  <i class="fas fa-info-circle"></i></td>
							<td></td>
						</tr>
						<tr>
							<td class="text-left">4. Vents <i class="fas fa-info-circle"></i></td>
							<td>10</td>
							<td class="text-left">9.  <i class="fas fa-info-circle"></i></td>
							<td></td>
						</tr>
						<tr>
							<td class="text-left">5. Friendly doc <i class="fas fa-info-circle"></i></td>
							<td>D6x10</td>
							<td class="text-left">10.  <i class="fas fa-info-circle"></i></td>
							<td></td>
						</tr>
					</tbody>
				</table>

				<table class="col-2 text-right">
					<tr>
						<td class="align-middle"><a href="{{ path('new_ganger', {gang_id : gangData.0.id}) }}" class="btn btn-secondary">New ganger</a></td>
					</tr>
					<tr>
						<td class="align-middle"><a href="#" class="btn btn-secondary">New territory</a></td>
					</tr>
					<tr>
						<td class="align-middle">
							<form method="post" action='{{ path('delete_gang', {gang_id : gangData.0.id}) }}' onsubmit="return confirm('Do you really want to delete your gang?')">
									<input type="hidden" name="_method" value="DELETE">
									<button class="btn btn-danger">Delete gang</button>
							</form>
						</td>
					</tr>
				</table>

			</div>
		</div>

	</section>

{% endblock %}