{% extends 'base.html.twig' %}

{% block title %}New injury{% endblock %}

{% block body %}

	<section id="new_injury" class="mb-5">
		<div class="col-3 m-auto text-white">

			{{ form_start(form) }}

				<div class="row">
					<div class="col-6">{{ form_row(form.d6tens) }}</div>
					<div class="col-6">{{ form_row(form.d6units) }}</div>
				</div>
				<div>{{ form_row(form.description) }}</div>

				<button class="btn btn-primary offset-4">Add injury</button>
				<a href="{{ path('admin') }}" class="btn btn-secondary my-2">Back</a>

			{{ form_end(form) }}

		</div>
	</section>

{% endblock %}