{% extends 'base.html.twig' %}

{% block title %}Gangs{% endblock %}

{% block body %}

	<section id="users" class="mb-5">
		<div class="row d-flex flex-wrap justify-content-center mx-5">

			{% for gang in gangs %}

					<div class="col-2 my-2 text-center">
						<div class="card">
							<img class="card-img-top" src="{{ gang.image }}" alt="{{ gang.house }}">
							<div class="card-body p-2">
								<h5 class="card-title">{{ gang.pseudo | upper ~ '-' ~ gang.house }}</h5>
								<p class="card-text mb-1">{{ gang.gangName }}</p>
								<a href="{{ path('show_gang', {gang_id : gang.id}) }}" class="btn btn-primary">View gang</a>
								<p class="mt-2 mb-0">Created {{ gang.createdAt | ago }} </p>
							</div>
						</div>
					</div>

			{% endfor %}

		</div>

		<div class="text-center">
			<a href="{{ path('home') }}" class="btn btn-secondary my-2">Back</a>
		</div>

	</section>

{% endblock %}